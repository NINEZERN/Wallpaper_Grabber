{
    "manifest_version": 2,
    "name": "Steam API Request",
    "version": "1.0",
    "permissions": [
      "activeTab", 
      "webRequest",
      "webRequestBlocking",
      "https://api.ggntw.com/",
      "downloads"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["https://steamcommunity.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  